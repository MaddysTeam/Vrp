@model List<MicroCourseRanking>
<ul class="res_list">

	@foreach (var item in Model)
	{
		<li>
			<a href="@Url.Action("ZcView", "CroResource", new { id = item.CrosourceId ,courseId=item.CourseId })">
				<img class="cover" src="@item.FitCoverPath" height="124" />
				<p>@item.Title</p>
				<p><span>作者：</span>@item.Author</p>
				<p><span>播放次数：</span>@item.PlayCount</p>
				@*@if(item.RType=="2"){
				<p><span>资源出处：</span>@item.RSource</p>
				}*@
			</a>
		</li>
	}

</ul>