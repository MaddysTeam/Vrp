
@model MicroCourse

<div class="courseArea" style="border:1px dashed #808080; padding-right:8%; margin-left:3%; padding-top:3%;">

	<div class="form-group">
		@Html.LabelFor(m => m.CourseTitle, new { @class = "control-label col-sm-3" })
		<div class="col-sm-9">
			@Html.TextBox("CourseTitle",Model.CourseTitle, new { @class = "form-control title", maxlength = "255", placeholder = "微课程标题" })
		</div>
	</div>

	<div class="form-group courseUploader">
		<label class="control-label col-sm-3"> <span class="request">*</span>微课视频</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.VideoName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加视频" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">选择 </button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.VideoId" />
	</div>

	<div class="form-group coverUploader">
		<label class="control-label col-sm-3"><span class="request">*</span>视频封面</label>
		<div class="col-sm-9 coverImageArea">
			@if (Model.CoverId > 0)
			{
				<img src="@Model.CoverPath" class="btn-upload" style="width:100%; height:100%" />
			}
			else {
				<div id="showCover" title="点击选择封面" class="cover-bg btn-upload">
					<span>点击选择封面</span>
				</div>
			}
		</div>
		<input type="hidden" class="fileId" value="@Model.CoverId" />
	</div>

	<div class="form-group designUploader">
		<label class="control-label col-sm-3"> <span class="request">*</span>教学设计</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.DesignName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加教学设计" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">选择 </button>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.DesignId" />
	</div>

	<div class="form-group summaryUploader">
		<label class="control-label col-sm-3"> <span class="request"></span>教学反思</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.SummaryName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加教学反思" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">选择 </button>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.SummaryId" />
	</div>

	<div class="form-group">
		<label class="control-label col-sm-3"> <span class="request"></span>练习/测试题</label>
		<div class="col-sm-9">
			<div class="input-group">
				<button class="btn btn-info btn-exes">新增习题</button>
			</div>
			@foreach (var item in Model.Exercises ?? new List<Exercises>())
			{
				<div class="exercises rows">
					<div class="form-group stem">
						<div class="col-sm-3">题干：</div>
						<div class="col-sm-4">
							<input class="form-control title valid" aria-invalid="false" value="@item.Name">
						</div>
						<div class="col-sm-5">
							<button class="btn btn-sm btn-success btn-opt">增加选项</button> <button class="btn btn-sm btn-info btn-del">删除</button>
						</div>
					</div>
					<div class="form-group answer">
						<div class="col-sm-3">正确答案：</div><div class="col-sm-4">
							<select class="form-control key valid" aria-invalid="false">
								<option value="1">@item.Answer</option>
							</select>
						</div><div class="col-sm-5"> </div>
					</div>
				</div>
			}
		</div>
	</div>

	@Html.Hidden("courseId", Model.CourseId, new { @class = "courseId" })

</div>


