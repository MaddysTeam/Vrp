@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "活跃用户";
}
<div class="menu">
	<div class="fl">
		<a href="@Url.Action("Index", "Home")">首页</a> > <span>@ViewBag.Title</span>
	</div>
</div>

<div class="uk-grid list">
	<table class="table table-striped">
		<tr>
			<th>头像</th>
			<th>用户</th>
			<td>登录次数</td>
		</tr>
		@foreach (ResActiveUser item in ViewBag.RankingOfActiveUser)
		{

			<tr>
				<td><a class="user_square" href="@Url.Action("Index", "My", new { id=item.UserId })" title="@item.RealName"><img src="@item.FitPhotoPath" /></a></td>
				<td><a href="@Url.Action("Index", "My", new { id=item.UserId })" title="@item.RealName"><span class="restitle">@item.RealName</span></a></td>

				<td>@item.ViewCount</td>
			</tr>
		}
	</table>


	<div>
		@Html.Pager((int)ViewBag.PageSize, (int)ViewBag.PageNumber, (int)ViewBag.TotalItemCount).Options(o => o
									.DisplayTemplate("_Bootstrap3Pagination")
								  .MaxNrOfPages(10)
								  .AlwaysAddFirstPageNumber()
								  .AddRouteValue("type", ViewBag.ParamType)
				  )
	</div>
</div>
