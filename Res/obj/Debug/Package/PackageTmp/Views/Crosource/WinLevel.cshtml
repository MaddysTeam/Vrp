@model List<CroResourceLevel>
@{ 
	var id = Request["id"];
}
<div class="modal-dialog">

	<!-- widget -->
	<div class="widget">
		<div class="widget-header">
			<h3><i class="fa fa-paperclip"></i> 选择获奖级别</h3>
		</div>

		<div class="widget-content">
			<!-- Condition -->
			<div class="row">

				<form action="@Url.Action("WinLevel","Crosource")" method="post">
					<div class="form-group center-block">
						@foreach (var item in Model)
						{
						 <label class="control-label"> &nbsp;&nbsp;&nbsp;&nbsp; @item.Name</label> @Html.RadioButton("WinLevel", @item.LevelId, @item.IsSelect, new { @class = "winlevel" })
						}

						<label class="control-label"> &nbsp;&nbsp;&nbsp;&nbsp; 撤销奖项</label> @Html.RadioButton("WinLevel", 0, false, new { @class = "winlevel" })
					</div>
				</form>
			</div>
			<!-- end Grid-->
		</div>
		<!-- end widget content -->

	</div>
	<!-- end widget -->

</div>

<script>
	$(function () {
		$('.winlevel').on('click', function () {
			$.post('@Url.Action("EditWinLevel", "Crosource")', { id: '@id', levelId: $(this).val() }, function (data) {
				$('#inner-edit-form').modal('hide');
				$('#bootgrid').bootgrid('reload');

				alertify.success(data.msg);
			});
		});
	});
</script>

