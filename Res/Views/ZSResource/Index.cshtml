@using Res.Business
@{
	ViewBag.Title = "展示资源";
}
<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li>
					<i class="fa fa-home"></i>
					<a href="@Url.Action("Index", "Home")">首页</a>
				</li>
				<li class="active">@ViewBag.Title</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2>@ViewBag.Title</h2>
			<em>按展示资源名称查询或者点击查看展示资源分类列表</em>
		</div>

		<div class="main-content">

			<div class="row">
				<div class="col-sm-12">
					<div class="col-sm-4">
						<div class="form-group">
							<form action="@Url.Action("Search")" name="form">
								<div class="input-group">
									<input type="text" name="d" class="search-field form-control" placeholder="请输入资源名称" />
									<a href="javascript:form.submit()" class="input-group-addon fa fa-search"></a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>

			<hr />

			<div class="row">
				<div class="col-md-12">
					@{
						var Items = APBplDef.ZSResourceBpl.GetLevel();

						foreach (var item in Items.GroupBy(m => m.OneLevel))
						{
							<div class="col-md-6">
								<div class="widget">
									<div class="widget-header">
										<h3><i class="fa fa-th-large"></i> @item.Key</h3>
									</div>
									<div class="widget-content">
										<ul style="padding-left: 20px">
											@foreach (var it in Items.FindAll(m => m.OneLevel == item.Key).GroupBy(m => m.TowLevel))
											{
												if (!string.IsNullOrEmpty(it.Key))
												{
													<li>@Html.ActionLink(it.Key, "Search", new { r = it.Key })</li>
												}
											}
										</ul>
									</div>
								</div>
							</div>
						}
					}
				</div>

			</div>

		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>
